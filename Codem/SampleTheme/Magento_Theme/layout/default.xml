<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"  src_type="url"/>


    </head>
    <body>
        <move element="catalog.topnav" destination="header-wrapper"  after="logo"/>
        <move element="header.links" destination="header-wrapper"  after="top.search"/>
        <move element="minicart" destination="header-wrapper"  after="header.links"/>
        <referenceContainer name="header.panel" remove="true" />
        <referenceBlock name="header" remove="true"/>
        <referenceBlock name="register-link" remove="true" />
        <referenceBlock name="copyright" remove="true" />
        <referenceBlock name="page.main.title" remove="true" />
        <referenceBlock name="view.addto.compare" remove="true"/>
        <referenceBlock name="breadcrumbs" remove="true"/>
    </body>
</page>
